pre
	background rgba(0, 0, 50, .03)

pre code
	display block
	color white
	color rgba(0, 0, 0, .8)

p code
	position relative
	white-space nowrap


.property
	color #6CBDE2
	color darken(#6CBDE2, 30)

.comment
	color: alpha(#626266, .6)


.atom, .def, .keyword, .literal
	color: #FDC13F
	color: hue(darken(#FDC13F, 15), 30deg)

.number
	color #A488ED
	color darken(#A488ED, 40)
	opacity .8

.operator
	color #F762AA
	color darken(#F762AA, 30)

.string
	color #A0E35F
	color darken(#A0E35F, 20)




code.lang-markdown
	color #424242
	color darken(#424242, 30)

code.lang-markdown .header,
code.lang-markdown .strong
	font-weight bold

code.lang-markdown .emphasis 
	font-style italic

code.lang-markdown .horizontal_rule,
code.lang-markdown .link_label,
code.lang-markdown .code,
code.lang-markdown .header,
code.lang-markdown .link_url 
	color #555
	color darken(#555, 30)

code.lang-markdown .blockquote,
code.lang-markdown .bullet
	color #bbb
	color darken(#bbb, 30)
