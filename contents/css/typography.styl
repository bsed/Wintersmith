notebook = 1170px
tablet   =  970px
phone    =  580px

mid = 600px
wdth = 600px
max = 720px

mrgn = 40px



@media (min-width: notebook)
	// Text Blocks
	p, h2, h3, h4, h5, h6, ul, ol
		width max

	h1
		width max - mrgn * 2

	blockquote
		width max + 10px
		padding 0 5px


	// Typography
	h1
		font-size 38px


	// Images and Code
	img, .header
		width notebook
		border-radius .25em
		display block
		margin 0 auto



@media (max-width: tablet)
	// Typography
	h1
		font-size 1.4em
		margin-top 3em

	// Video
	.iframe iframe
		width 100%
		position absolute
		top 0
		left 0
		height 100%

	.iframe .ratio
		width 100%
		display block
		height auto



@media (max-width: phone)
	body
		font-size 14pt

	// Text Blocks
	h1, p, h2, h3, h4, h5, h6, ul, ol
		width 100%
		padding 0 20px


	// Typography
	h1
		font-size 1.4em
		text-align left

	p:first-of-type
		margin-top 4em
		color red

	blockquote	
		width 94%
		margin-left 23px
		margin-right -23px
		padding 0

	blockquote p 
		margin-left -10px

	ul, ol
		margin-left 20px


	// Images and Code
	p img
		width 100%
		margin 0 auto

	pre code
		font-size .8em
		line-height 1.5em
		width 100%
		margin 0
		padding 0 40px

	.ava
		display none		

	.ava2
		display inline
		position relative
		width 28px
		height 28px
		margin-right .5em
		top .4em

	.author
		font-size .8em
		text-align left
		text-transform none