h1, h2, h3, h4, h5, h6, p, a, ul, ol, blockquote
	margin 0
	padding 0
	border 0

body, a:visited
	background-repeat repeat
	font-family "Roboto", "Helvetica Neue", sans-serif
	margin 0	
	font-size 20px
	font-weight 300
	line-height 1.6em
	color rgba(0, 0, 0, .8)
	letter-spacing -.005em

leading = 22px
max  = 740px

notebook = 1170px
tablet   =  850px + 40px
phone    =  750px

p, h1, h2, h3, h4, h5, h6, ul, ol, blockquote
	width max
	margin leading auto
	display block
	box-sizing border-box
// 	background-color rgba(0, 0, 0, .04)
// body
// 	background-image url("/css/bg.png")
	

p, h2, h3, h4, h5, h6, ul, ol
	padding-left 20px
	padding-right 20px

h2, h3, h4, h5, h6
	padding-right 1em

h1, h2, h3, h3, h5, h6
	font-family "Open Sans"
	letter-spacing -.03em
	line-height 1.3em

	margin-bottom -.65em

h1
	width max + 80px
	font-size 1.8em
	text-align: center
	font-weight 300
	letter-spacing -.02

	margin-top 40px
	margin-bottom -.45em

h2
	font-size 1.25em
	font-weight 500
	color black
	margin-top 1.4em

h3
	font-size 1.15em
	font-weight 300
	opacity .7

	margin-top 1.2em

h2 + h3
	margin-top .8em
	margin-bottom 1em

h4, h5, h6
	font-family "Roboto"
	font-weight 500

	margin 1.25em auto -1em auto
	line-height 1.4em
	padding-bottom 0
	padding-top .2em
	padding-right 5em


h3 + h4
	padding-top .4em

h5
	padding-right 0
	margin-bottom leading * 1.6
	font-family "Open Sans"
	font-weight 300
	letter-spacing 0
	font-size 1.15em
	line-height 1.6em
	width max - 100px
	opacity .9

h5:before, h5:after
	opacity .2
	font-size 2em

h5:before
	content "«"
	display block
	margin-left -27px
	margin-bottom -.7em	

h5:after
	content "»"
	line-height 0
	position relative
	top 5px
	margin-left 5px


.comments
	width max - 40px
	margin 2em auto

blockquote
	border-left 2px solid rgba(50, 40, 0, .3)
	color rgba(75, 60, 0, 1)
	width max - 40px
	opacity 1
	background-color rgba(100, 80, 0, .04)
	border-radius 0 5px 5px 0
	margin auto
	padding-top 1px
	padding-bottom 1px
	padding-right 0

blockquote p
	margin-top (leading/2)
	width max - 40px
	margin-bottom (leading/2)
	padding-right 1em


a, a:hover
	text-decoration none

a
	display inline
	padding-bottom 0
	border-bottom 1px solid rgba(68, 119, 221, 0)
	opacity 1

.metadata a
	color rgba(0, 0, 0, .4)

a:hover
	padding-bottom 2px
	opacity .4
	-webkit-transition opacity .3s ease-out

a:active
	background-color rgba(0, 0, 0, .1)
	padding 2px 0
	-webkit-transition padding .1s ease-in
	border-radius 4px

header a, footer a
	color black

article a, article a:visited
	color black
	padding-bottom 2px
	border-bottom 1px solid rgba(0, 0, 0, 0.3)

article a:hover
	color #47D
	opacity 1
	padding-bottom 4px
	border-bottom 1px solid rgba(68, 119, 221, 0)
	-webkit-transition border-bottom .2s ease-out, 
					   padding .2s ease-out

.metadata a:hover
	opacity .6



b, strong
	font-weight 500

i, em
	font-family "Open Sans"
	font-size .98em


hr
	width (max/3)
	border 0
	border-top 1px solid #d2d2d2
	height 0
	margin 2em auto 2.6em

article
	margin-top 240px

.parallax
	position absolute
	width 100%
	top 40px


article hr:first-of-type
	display none

ol, ul
	list-style none
	counter-reset num

	padding-left 20px
	margin-bottom leading * 1.4

h2 + ol, h2 + ul
	margin-top 1.4em

li
	margin-bottom leading * .5

ol li
	padding-left 29px

ol li:before
	counter-increment num
	content: counter(num) "."
	display inline-block
	width 40px
	margin-left -52px
	margin-right 12px
	text-align right

ul li
	padding-left 27px

ul li:before
	content: "–"
	display inline-block
	width 40px
	margin-left -54px 
	margin-right 14px 
	text-align right

small
	font-size .7em
	line-height 1em




.index .metadata
	text-align left
	margin-bottom -15px
	margin-top 18px
	padding-left 20px
	

.index h2
	color black
	font-weight 300
	padding-right 5em


.index a, .index a:hover
	color rgba(0, 0, 0, .8)
	border-bottom 0

.index hr:first-of-type
	display: block

.index img
	width max - 40px
	margin-top 0
	margin-left 0

.index .ava_small
	display inline
	position relative
	width 26px
	height 26px
	margin-right .5em
	margin-left 0
	top .36em


		


.ava_big
	width 80px
	height 80px
	margin 40px auto -27px

.ava_big, .ava_small
	border-radius 50%

.ava_big
	display block

.ava_small
	display none
	margin-bottom 0
	margin-left 0
	margin-top 0


header 
	font-family "Open Sans"
	font-size .8em
	font-weight 500
	letter-spacing -.02em
	padding 1em 20px 1.2em
	box-sizing border-box
	border-bottom 0

footer
	font-size .85em
	line-height 1.8em
	font-family "Open Sans"
	font-weight 500
	letter-spacing -.02em
	margin-bottom 80px
	text-align center
	opacity 1

.logo
	margin 0
	padding 0
	width 100%
	height 2em

.logo li:first-child
	display inline-block
	background-image url("/css/home.svg")
	background-repeat no-repeat
	background-position center left
	position absolute
	left 40px
	padding-left 23px

.logo li
	display inline
	padding 0
	margin 0
	margin-right 20px

.logo li:before
	display none

.logo li:last-child
	display inline-block
	background-image url("/css/rpc.svg")
	background-repeat no-repeat
	background-position center right
	position absolute
	right 25px
	padding-right 23px

.metadata
	color rgba(0, 0, 0, .4)
	font-size .8em
	font-family "Open Sans"
	font-weight 500
	text-align center
	margin 16pt auto 35pt
	padding-left 0



code
	font-size .9em
	letter-spacing -.05em
	display inline

pre
	width max - 40px
	overflow auto
	border-radius 0 .2em .2em 0
	border-left 2px solid rgba(0, 10, 40, .1)
	margin auto

pre code
	padding 15px 20px
	margin 0 auto
	font-size .64em
	letter-spacing 0
	line-height 1.7em




img
	width 100%

p img
	width max + 180px
	margin-left -110px
	margin-top leading * 1.5
	margin-bottom leading * 0.5

@media (max-width: 960px)
	p img
		width max + 80px
		margin-left -60px
		margin-top leading * 1.5
		margin-bottom leading * 0.5


img + small
	display block
	text-align center
	margin-left -20px
	margin-top leading * (-.5)
	margin-bottom leading * 1.5



.iframe
	position relative
	width max + 120px
	margin leading * 2 auto
.iframe iframe
	width max + 120px
	position absolute
	top 0
	left 0
	height 100%
.iframe .ratio
	width max + 120px
	display block
	height auto
	content: url("/css/transparent.png")

.dot
	letter-spacing .4em
	font-size .8em
	opacity .5


// @media (max-width: notebook) and (min-width: tablet)
// 	h1
// 		width max
// 		font-size 1.6em

@media (max-width: tablet)
	max = 640px + 40px

	body
		font-size 15pt

	h1, p, h2, h3, h4, h6, ul, ol
		width max

	pre, blockquote p, blockquote
		width max - 40px

	.comments
		width max - 40px

	h1
		font-size 1.6em

	h5
		width max - 100px

	p img
		width max - 40px
		margin-left 0
		margin-top leading * 1
		margin-bottom 0

	img + small
		margin-top 0
		margin-bottom 10px

	.iframe
		width max + 60px
		position relative
		margin leading * 2 auto
	.iframe iframe
		width max + 60px
		position absolute
		top 0
		left 0
		height 100%
	.iframe .ratio
		width max + 60px
		display block
		height auto

@media (max-width: phone)
	body
		font-size 14pt

	h1, p, h2, h3, h4, h5, h6, ul, ol, 
	blockquote, blockquote p
		width 100%
		padding 0 20px
		margin inherit 0

	.comments
		width 90%

	p
		overflow hidden

	h1, .index h2
		max-width 100%
		font-size 1.4em
		text-align left
		margin-top 12px
		margin-bottom -20px
		padding-right 2em
		padding-bottom 0px

	h2, h3
		margin-top 1.5em
		margin-bottom -.8em
	h2
		font-size 1.15em
	h2 + h3
		margin-top 1.1em
	h3
		font-size 1.1em
	h4
		margin-bottom -1.35em

	h5
		max-width 90%

	hr
		width 68%
		margin-bottom leading * 1.4

	blockquote p 
		padding 10px 0

	article
		margin-top 160px

	.parallax
		padding-top 5px

	pre
		width 100%
		padding 0
		border-radius 0

	pre code
		padding 15px 20px

	p img	
		width 100%
		margin 0 
		padding 0

	.iframe
		width 100%
		position relative
		margin leading * 2 auto
	.iframe iframe
		width 100%
		position absolute
		top 0
		left 0
		height 100%
	.iframe .ratio
		width 100%
		display block
		height auto

	.ava_big
		display none		

	.ava_small, .index .ava_small
		display inline
		position relative
		width 28px
		height 28px
		margin 0 
		padding 2px
		top 10px
		left -5px

	.metadata, .index .metadata
		font-size .8em
		width 100%
		text-align left
		text-transform none
		text-align left
		margin 0
		padding 0
		margin-top 15px
		padding-left 25px
	
	.index .metadata
		padding-bottom -30px
		margin-bottom -10px
	.metadata
		padding-bottom 50px

	header
		border-bottom 1px solid rgba(0, 0, 0, .05)
		padding .6em 20px .5em

	.logo li:first-child
		left 20px
	.logo li:last-child
		right 0px


@media (max-width: 400px)
	.dot, .metadata span:last-child
		display none


