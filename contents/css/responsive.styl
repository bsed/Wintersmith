notebook = 1170px
tablet   =  970px
phone    =  750px
mid  = 580px
max  = 700px
leading = 22px




header, .author
	font-size .8em

header 
	font-family "Open Sans"
	font-weight 500
	letter-spacing -.02em
	padding 8px 30px
	box-sizing border-box
	border-bottom 1px solid rgba(0, 0, 0, .05)

footer
	font-size .85em
	line-height 1.8em
	font-family "Open Sans"
	font-weight 500
	letter-spacing -.02em
	margin-bottom 80px
	text-align center
	opacity 1

.logo
	padding-left 28px
	background-image url("/css/logo.svg")
	background-repeat no-repeat

.metadata
	font-size .8em
	font-family "Open Sans"
	font-weight 500
	text-align center
	margin 16pt auto 35pt
	padding-left 0

.metadata
	color rgba(0, 0, 0, .4)




code
	font-size .9em
	letter-spacing -.05em
	display inline

pre
	overflow auto
	width max
	margin auto

pre code
	
	padding 40px
	margin leading auto
	font-size .64em
	letter-spacing 0
	line-height 1.7em




img
	width 100%

p img
	width max + 120px
	margin-left -80px
	margin-top leading
	margin-bottom leading * 2

img + small
	display block
	text-align center
	margin-left -20px
	margin-top leading * (-2)
	margin-bottom leading * 2



.iframe
	position relative
	width max + 120px
	margin leading * 2 auto
.iframe iframe
	width max + 120px
	position absolute
	top 0
	left 0
	height 100%
.iframe .ratio
	width max + 120px
	display block
	height auto

.dot
	letter-spacing .4em
	font-size .8em
	opacity .5


@media (max-width: notebook) and (min-width: tablet)
	h1
		width max
		font-size 1.6em

@media (max-width: tablet) and (min-width: phone)
	body
		background-color rgba(200, 0, 0, .1)

	h1, p, h2, h3, h4, h5, h6, ul, ol
		width max

	h1
		font-size 1.4em

@media (max-width: phone)
	body
		font-size 13pt

	header
		padding-left 20px

	p, h2, h3, h4, h5, h6, ul, ol, blockquote
		width 100%
		padding 0 20px
		margin inherit 0

	p
		overflow hidden

	h1
		max-width 90%
		font-size 1.4em
		text-align left
		margin-top 20px
		margin-left 20px
		margin-bottom -20px
		padding-left 0
		padding-bottom 0px

	h5
		max-width 90%

	blockquote p 
		padding 10px 0


	pre
		width 100%
		margin 0

	pre code
		font-size .8em
		line-height 1.5em
		width 100%
		margin 0
		padding 0 40px

	.ava_big
		display none		

	.ava_small
		display inline
		position relative
		width 28px
		height 28px
		margin-right .5em
		margin-bottom 0
		top .4em

	.metadata
		font-size .8em
		text-align left
		text-transform none
		padding-left 20px
		padding-bottom 50px

	p img
		width 100%
		margin 0 
		padding 0

	img + small
		margin-top -5px
		margin-bottom 5px

	.iframe
		width 100%
		position relative
		margin leading * 2 auto
	.iframe iframe
		width 100%
		position absolute
		top 0
		left 0
		height 100%
	.iframe .ratio
		width 100%
		display block
		height auto